<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BDActivity">

    <TextView
        android:id="@+id/espacio"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="" />

    <EditText
        android:id="@+id/text_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="nombre" />

    <EditText
        android:id="@+id/text_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="descipcion" />

    <EditText
        android:id="@+id/text_latitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Latitud" />

    <EditText
        android:id="@+id/text_longitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="longitud" />

    <Button
        android:id="@+id/button_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crear" />

    <Button
        android:id="@+id/button_listar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listar" />

    <Button
        android:id="@+id/button_eliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar" />

    <TextView
        android:id="@+id/espacio1"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/texto_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listas"
            android:padding="10dp" />
    </ScrollView>

</LinearLayout>